<style>
.home-social {
  text-align: left;
  padding: 220px 40px 100px;
  background-color: #fcf7ea;
}

.social-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 64px;
}

.social-icons {
  display: flex;
  gap: 10px;
  align-items: center;
}

.social-icon {
  display: block;
  opacity: 1;
  transition: opacity 0.3s ease;
}

.social-icon:hover {
  opacity: 0.7;
}

.social-icon img {
  display: block;
  width: 24px;
  height: 24px;
}

.instagram-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.instagram-item {
  text-align: left;
}

.instagram-item img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
  margin-bottom: 20px;
}

.instagram-handle {
  margin-bottom: 40px;
  font-weight: 500;
}

.product-button .button {
  width: 100%;
  padding: 12px 20px;
  background-color: #000;
  color: #fff;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.product-button .button:hover {
  background-color: #333;
}

/* Mobile Styles */
@media (max-width: 767px) {
  .home-social {
    padding: 40px 20px 80px;
  }

  .social-header {
    flex-direction: column;
    gap: 20px;
    margin-bottom: 40px;
  }

  .instagram-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }
}
</style>