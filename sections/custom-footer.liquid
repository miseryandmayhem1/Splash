<footer class="custom-footer">
  <div class="footer-logo">
  {%- if section.settings.footer_logo -%}
    <img
      src="{{ section.settings.footer_logo | img_url: 'master' }}"
      alt="{{ section.settings.footer_logo.alt | default: shop.name }}"
      class="footer-logo-image"
      loading="lazy"
    >
  {%- endif -%}
</div>

  <div class="footer-links">
    <!-- Column 1 -->
    <div class="footer-column">
      <ul>
        <li><a href="{{ section.settings.link_1_url | default: '#' }}">{{ section.settings.link_1 }}</a></li>
        <li><a href="{{ section.settings.link_2_url | default: '#' }}">{{ section.settings.link_2 }}</a></li>
        <li><a href="{{ section.settings.link_3_url | default: '#' }}">{{ section.settings.link_3 }}</a></li>
      </ul>
    </div>

    <!-- Column 2 -->
    <div class="footer-column">
      <ul>
        <li><a href="{{ section.settings.link_4_url | default: '#' }}">{{ section.settings.link_4 }}</a></li>
        <li><a href="{{ section.settings.link_5_url | default: '#' }}">{{ section.settings.link_5 }}</a></li>
        <li><a href="{{ section.settings.link_6_url | default: '#' }}">{{ section.settings.link_6 }}</a></li>
      </ul>
    </div>

    <!-- Column 3 -->
    <div class="footer-column">
      <ul>
        <li><a href="{{ section.settings.link_7_url | default: '#' }}">{{ section.settings.link_7 }}</a></li>
        <li><a href="{{ section.settings.link_8_url | default: '#' }}">{{ section.settings.link_8 }}</a></li>
      </ul>
    </div>

    <!-- Column 4 (Copyright) -->
    <div class="footer-column copyright-column">
      <p>{{ section.settings.copyright_text }}</p>
    </div>
  </div>
</footer>


